<mvc:View xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form" controllerName="br.com.paulopatine.integratorProject.controller.Config" displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page id="page" title="{i18n>configTitle}" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<HBox>
				<items>
					<VBox>
						<form:SimpleForm layout="ResponsiveGridLayout">
							<Label text="{i18n>theme}"></Label>
							<Select name="theme" id="themeSelect" change="onThemeChange">
								<items>
									<core:Item key="sap_fiori_3" text="{i18n>light}"/>
									<core:Item key="sap_fiori_3_dark" text="{i18n>dark}"/>
								</items>
							</Select>
						</form:SimpleForm>
					</VBox>
				</items>
			</HBox>
		</content>
	</Page>
</mvc:View>